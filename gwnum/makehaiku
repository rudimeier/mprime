# Makefile for Haiku gwnum library
#

CC = gcc
CFLAGS = -I.. -O2 -march=i586 -malign-double

CPP = g++
CPPFLAGS = -I.. -I../qd -O2 -march=i586 -malign-double

HAIKUOBJS = cpuid.o gwnum.o gwthread.o gwutil.o gwdbldbl.o giants.o ecmstag1.o

LIB = gwnum.a

#########################################################################

$(LIB): $(HAIKUOBJS)
	cp linux/gwnum.a .
	ar -rs $(LIB) $(HAIKUOBJS)

clean:
	rm -f $(HAIKUOBJS)

.c.o:
	$(CC) $(CFLAGS) -c $<

.cpp.o:
	$(CPP) $(CPPFLAGS) -c $<
